<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f2f1f1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f2f1f1"
            android:paddingTop="@dimen/value_10dp"
            android:paddingBottom="@dimen/value_10dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/typeNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顺风车"
                android:gravity="center"
                android:textSize="@dimen/value_16sp"
                android:textColor="@color/txt_333333"
                android:layout_marginBottom="@dimen/value_5dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_below="@id/typeNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离您大概"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_999999"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.6"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_orange"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <TextView
                    android:layout_below="@id/typeNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_999999"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingTop="@dimen/value_5dp"
            android:background="#fff"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chufa_pic"
                    android:layout_marginTop="@dimen/value_15dp"
                    android:layout_marginBottom="@dimen/value_35dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mudi_pic"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/value_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="始发地："
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/value_16sp"
                        android:layout_marginRight="@dimen/value_5dp"
                        />

                    <TextView
                        android:id="@+id/shifadiId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深证市朗山路16号华汉科技大厦D座516"
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/value_16sp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f1f1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/value_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="始发地："
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/value_16sp"
                        android:layout_marginRight="@dimen/value_5dp"
                        />

                    <TextView
                        android:id="@+id/mudidiId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深证市朗山路16号华汉科技大厦D座516"
                        android:textColor="@color/txt_333333"
                        android:textSize="@dimen/value_16sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f1f1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:paddingLeft="@dimen/value_10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单人："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <TextView
                    android:id="@+id/xiadanrenId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="罗小兵"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f1f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/value_5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <TextView
                    android:id="@+id/xiadanPhoneId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13510625920"
                    android:textColor="@color/text_greeen"
                    android:textSize="@dimen/value_16sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_10dp"
            android:background="#f2f1f1"
            />

        <include layout="@layout/b_takeorder_foot"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/value_10dp"
        android:background="#f2f1f1"
        >

        <TextView
            android:id="@+id/sureId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_40dp"
            android:text="确定"
            android:textSize="@dimen/value_18sp"
            android:textColor="@color/txt_white"
            android:background="@mipmap/activity_sign_up_btn_back"
            android:gravity="center"
            />

    </LinearLayout>


</LinearLayout>