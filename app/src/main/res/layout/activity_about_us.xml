<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_20dp"
        android:src="@mipmap/logo_index" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_10dp"
        android:text="摩小三科技有限公司"
        android:textColor="@color/txt_666666" />

    <TextView
        android:id="@+id/versionNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_5dp"
        android:text="V 1.0.0"
        android:textColor="@color/txt_666666"
        android:textSize="@dimen/value_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/about_us_official"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官网"
            android:textColor="@color/txt_666666" />

        <ImageView
            android:layout_width="@dimen/value_1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_10dp"
            android:background="@color/txt_666666" />

        <TextView
            android:id="@+id/about_us_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/txt_666666" />

        <ImageView
            android:layout_width="@dimen/value_1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_10dp"
            android:background="@color/txt_666666" />

        <TextView
            android:id="@+id/about_us_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博"
            android:textColor="@color/txt_666666" />
    </LinearLayout>
</LinearLayout>
