<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/value_20dp"
    android:layout_marginRight="@dimen/value_20dp"
    android:background="@drawable/shape_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_25dp"
        android:text="提示"
        android:textStyle="bold"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/value_18sp" />

    <TextView android:id="@+id/tvDialogActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value_10dp"
        android:text="您确定要退出吗"
        android:textColor="@color/txt_333333"
        android:textSize="@dimen/value_17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/value_25dp"
        android:background="@color/textcolorc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/setting_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/value_17sp"
            android:textColor="@color/txt_666666"
            android:text="取消" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/textcolorc" />
        <TextView
            android:id="@+id/setting_exit_ensure"
            android:layout_width="0dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/value_17sp"
            android:textColor="@color/txt_666666"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>