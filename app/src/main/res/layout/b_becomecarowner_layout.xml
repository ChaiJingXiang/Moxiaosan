<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车主姓名："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <EditText
                    android:id="@+id/nameId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/value_30dp"
                    android:hint=""
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:background="#fff"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f1f1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号码："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <EditText
                    android:id="@+id/cardId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/value_30dp"
                    android:hint="123456789012345678"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:maxLength="18"
                    android:background="#fff"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f1f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号码："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <EditText
                    android:id="@+id/carNumerId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/value_30dp"
                    android:hint="粤:AA8888"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:background="#fff"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f1f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行驶证编号："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <EditText
                    android:id="@+id/driveNumerId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/value_30dp"
                    android:hint="1234567890"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:background="#fff"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f1f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/value_5dp"
                android:paddingBottom="@dimen/value_5dp"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingRight="@dimen/value_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆类型："
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <EditText
                    android:id="@+id/carTypeId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/value_30dp"
                    android:hint="摩托车.三轮车.货车.私家车.巴士等"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_16sp"
                    android:background="#fff"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f2f1f1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/value_10dp"
                android:paddingTop="@dimen/value_10dp"
                android:text="上传图片"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/value_10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imgCardId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_80dp"
                        android:src="@mipmap/add_pic"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传身份证件照"
                        android:textColor="@color/txt_666666"
                        android:textSize="@dimen/value_12sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imgDriverId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_80dp"
                        android:src="@mipmap/add_pic"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传行驶证照"
                        android:textColor="@color/txt_666666"
                        android:textSize="@dimen/value_12sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imgCarId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_80dp"
                        android:src="@mipmap/add_pic"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆照(正面带车牌)"
                        android:textColor="@color/txt_666666"
                        android:textSize="@dimen/value_12sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/value_10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imgOtherId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/value_80dp"
                        android:src="@mipmap/add_pic"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传其他件照(如保险单,驾驶证等)(可选)"
                        android:textColor="@color/txt_666666"
                        android:textSize="@dimen/value_12sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/value_10dp"
        >

        <TextView
            android:id="@+id/sureId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:text="确定"
            android:textSize="@dimen/value_18sp"
            android:textColor="@color/txt_white"
            android:background="@mipmap/register_register_back"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
