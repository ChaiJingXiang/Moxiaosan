<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_48dp"
        android:background="@color/main_color">

        <ImageButton
            android:id="@+id/select_from_address_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingBottom="@dimen/value_5dp"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            android:paddingTop="@dimen/value_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/title_back_no" />

        <!--<TextView-->
            <!--android:id="@+id/select_from_address_ensure"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/value_10dp"-->
            <!--android:text="确定"-->
            <!--android:textColor="@color/txt_white"-->
            <!--android:textSize="@dimen/value_16sp" />-->

        <EditText
            android:id="@+id/select_from_address_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/value_5dp"
            android:paddingRight="@dimen/value_5dp"
            android:layout_centerInParent="true"
            android:hint="从哪里出发"
            android:textSize="@dimen/value_14sp"
            android:background="@mipmap/select_address_edit_back" />
    </RelativeLayout>

    <ListView
        android:id="@+id/select_from_address_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
