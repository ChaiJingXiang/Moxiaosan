<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/value_10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_10dp"
                android:gravity="center"
                android:text="感谢您选择摩小三，因为我们都相信"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_9dp"
                android:paddingLeft="@dimen/value_37dp"
                android:text="选择是一件美好的事情 ..."
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_9dp"
                android:gravity="right"
                android:paddingRight="@dimen/value_68dp"
                android:text="摩小三团队"
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_140dp"
            android:background="@color/txt_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/value_15dp"
            android:paddingRight="@dimen/value_15dp"
            android:paddingTop="@dimen/value_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你想注册为"
                android:textColor="@color/txt_808080"
                android:textSize="@dimen/value_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/value_10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/register_radio_group"
                    android:layout_width="@dimen/value_25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/value_5dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/register_radio_button_1"
                        android:layout_width="@dimen/value_20dp"
                        android:layout_height="@dimen/value_20dp"
                        android:checked="true"
                        android:button="@null"
                        android:background="@drawable/register_radio_btn_style"
                        />

                    <RadioButton
                        android:id="@+id/register_radio_button_2"
                        android:layout_width="@dimen/value_20dp"
                        android:layout_height="@dimen/value_20dp"
                        android:layout_marginTop="@dimen/value_30dp"
                        android:button="@null"
                        android:background="@drawable/register_radio_btn_style"
                        />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户账号"
                        android:textColor="@color/txt_808080"
                        android:textSize="@dimen/value_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(可以享受门到门速递和顺风车服务)"
                        android:textColor="@color/txt_808080"
                        android:textSize="@dimen/value_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_15dp"
                        android:text="车主账号"
                        android:textColor="@color/txt_808080"
                        android:textSize="@dimen/value_16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(安全、娱乐和赚钱)"
                        android:textColor="@color/txt_808080"
                        android:textSize="@dimen/value_12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_15dp"
            android:background="@color/txt_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_48dp">

                <TextView
                    android:id="@+id/register_phonenum_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:text="手机号码"
                    android:textColor="@color/txt_808080"
                    android:textSize="@dimen/value_14sp" />

                <EditText
                    android:id="@+id/register_phonenum_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_toLeftOf="@+id/register_get_code_txt"
                    android:layout_toRightOf="@+id/register_phonenum_txt"
                    android:background="@color/txt_white"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/register_get_code_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:background="@mipmap/get_verify_code"
                    android:padding="@dimen/value_5dp"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/txt_white"
                    android:textSize="@dimen/value_13sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_1dp"
                android:layout_marginLeft="@dimen/value_15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/divider_line_horizonal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:text="验证码"
                    android:textColor="@color/txt_808080"
                    android:textSize="@dimen/value_14sp" />

                <EditText
                    android:id="@+id/register_code_edit"
                    android:layout_width="@dimen/value_200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:background="@color/txt_white"
                    android:textSize="@dimen/value_14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_15dp"
            android:background="@color/txt_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_password_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:text="输入密码"
                    android:textColor="@color/txt_808080"
                    android:textSize="@dimen/value_14sp" />

                <EditText
                    android:id="@+id/register_password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:background="@color/txt_white"
                    android:inputType="textPassword"
                    android:textSize="@dimen/value_14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_1dp"
                android:layout_marginLeft="@dimen/value_15dp"
                android:scaleType="fitXY"
                android:src="@mipmap/divider_line_horizonal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_repassword_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_15dp"
                    android:text="再次输入"
                    android:textColor="@color/txt_808080"
                    android:textSize="@dimen/value_14sp" />

                <EditText
                    android:id="@+id/register_repassword_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:background="@color/txt_white"
                    android:inputType="textPassword"
                    android:textSize="@dimen/value_14sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_register_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/value_10dp"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginLeft="@dimen/value_40dp"
        android:layout_marginRight="@dimen/value_40dp"
        android:background="@mipmap/register_register_back"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/value_16sp"
        android:padding="@dimen/value_15dp"/>
</LinearLayout>
