<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f2f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50dp"
        android:paddingLeft="@dimen/value_10dp"
        android:background="#fff"
        android:layout_marginTop="28dp"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:id="@+id/typeNameId"
            android:layout_width="@dimen/value_80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/wechat_photo"
            android:layout_marginLeft="20dp"
            android:text="微信号"
            android:textSize="@dimen/value_16sp"
            android:textColor="@color/txt_333333"
            android:gravity="end"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#f2f1f1"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/usernameId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50dp"
        android:paddingLeft="@dimen/value_10dp"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="@dimen/value_80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/wechat_photo"
            android:layout_marginLeft="20dp"
            android:text="绑定手机号"
            android:textSize="@dimen/value_16sp"
            android:textColor="@color/txt_333333"
            android:gravity="end"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#f2f1f1"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/phoneId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="@dimen/value_5dp"
            android:inputType="number"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50dp"
        android:paddingLeft="@dimen/value_10dp"
        android:background="#fff"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="@dimen/value_80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/wechat_photo"
            android:layout_marginLeft="20dp"
            android:text="提现金额"
            android:textSize="@dimen/value_16sp"
            android:textColor="@color/txt_333333"
            android:gravity="end"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#f2f1f1"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/moneyId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_marginLeft="@dimen/value_5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/value_10dp"
        android:layout_marginTop="80dp"
        >

        <TextView
            android:id="@+id/sureId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_45dp"
            android:text="确定"
            android:textSize="@dimen/value_18sp"
            android:textColor="@color/txt_white"
            android:background="@color/main_color"
            android:gravity="center"
            />

    </LinearLayout>




</LinearLayout>