<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:paddingBottom="@dimen/value_10dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/take_photo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:text="拍照"
        android:gravity="center"
        android:textSize="@dimen/value_15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <Button
        android:id="@+id/use_photo"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:text="从相册选取"
        android:gravity="center"
        android:textSize="@dimen/value_15sp" />

    <Button
        android:id="@+id/photo_cancle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/value_40dp"
        android:layout_marginTop="10dip"
        android:background="@color/txt_white"
        android:text="取消"
        android:gravity="center"
        android:textSize="@dimen/value_15sp" />
</LinearLayout>
