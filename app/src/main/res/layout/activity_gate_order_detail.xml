<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_backgroud"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/value_10dp"
            android:paddingTop="@dimen/value_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gate_order_detail_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        "
                    android:textColor="@color/main_color" />

                <TextView
                    android:id="@+id/gate_order_detail_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_42dp"
                    android:layout_marginRight="@dimen/value_42dp"
                    android:text="        "
                    android:textColor="@color/main_color" />

                <TextView
                    android:id="@+id/gate_order_detail_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         "
                    android:textColor="@color/main_color" />

                <TextView
                    android:id="@+id/gate_order_detail_time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_42dp"
                    android:text="         "
                    android:textColor="@color/main_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/value_5dp"
                android:layout_marginTop="@dimen/value_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gate_order_detail_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_state_grey" />

                <ImageView
                    android:id="@+id/gate_order_detail_line1"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_1dp"
                    android:background="@color/txt_999999" />

                <ImageView
                    android:id="@+id/gate_order_detail_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_state_grey" />

                <ImageView
                    android:id="@+id/gate_order_detail_line2"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_1dp"
                    android:background="@color/txt_999999" />

                <ImageView
                    android:id="@+id/gate_order_detail_img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_state_grey" />

                <ImageView
                    android:id="@+id/gate_order_detail_line3"
                    android:layout_width="@dimen/value_55dp"
                    android:layout_height="@dimen/value_1dp"
                    android:background="@color/txt_999999" />

                <ImageView
                    android:id="@+id/gate_order_detail_img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_state_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gate_order_detail_qujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已取件"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_666666" />

                <TextView
                    android:id="@+id/gate_order_detail_fuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_35dp"
                    android:layout_marginRight="@dimen/value_35dp"
                    android:text="服务中"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_666666" />

                <TextView
                    android:id="@+id/gate_order_detail_paisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已派送"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_666666" />

                <TextView
                    android:id="@+id/gate_order_detail_queren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_35dp"
                    android:text="已确认"
                    android:textSize="@dimen/value_14sp"
                    android:textColor="@color/txt_666666" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:orientation="vertical"
            android:padding="@dimen/value_10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="始发地："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_from_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="目的地："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_to_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="收件人："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_shoujianren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="手机号码："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_shoujian_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="货物名称："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="申报价值："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_goods_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="大小："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_goods_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="重量："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_goods_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="费用："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_orange"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="打赏金额："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_ward_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_orange"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="接单人："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_jiedan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/value_80dp"
                    android:layout_height="wrap_content"
                    android:text="手机号码："
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />

                <TextView
                    android:id="@+id/gate_order_detail_jiedan_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_greeen"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/value_3dp">

                <TextView
                    android:id="@+id/gate_order_detail_ensure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_10dp"
                    android:layout_toLeftOf="@+id/gate_order_detail_cancel"
                    android:background="@mipmap/order_txt_back"
                    android:gravity="center"
                    android:text="确认付款"
                    android:textColor="@color/txt_orange" />

                <TextView
                    android:id="@+id/gate_order_detail_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/order_txt_back"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textColor="@color/txt_orange" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:orientation="vertical"
            android:padding="@dimen/value_10dp">

            <!--<ImageView-->
                <!--android:id="@+id/gate_order_detail_map_img"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/value_100dp"-->
                <!--android:scaleType="fitXY" />-->

            <com.baidu.mapapi.map.MapView
                android:id="@+id/gate_order_detail_map_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_100dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/gate_order_detail_share_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/value_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/share_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:layout_marginLeft="@dimen/value_5dp"
                    android:textColor="@color/txt_666666"
                    android:textSize="@dimen/value_14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
