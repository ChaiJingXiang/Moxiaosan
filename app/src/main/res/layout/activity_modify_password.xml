<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:padding="@dimen/value_10dp">

        <TextView
            android:id="@+id/modify_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码："
            android:textColor="@color/txt_333333"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/modify_password_get_code_txt"
            android:layout_width="@dimen/value_80dp"
            android:layout_height="@dimen/value_30dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/register_register_back"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/txt_white"
            android:padding="@dimen/value_5dp"/>

        <EditText
            android:id="@+id/etPhoneNumId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_10dp"
            android:padding="@dimen/value_5dp"
            android:layout_toLeftOf="@+id/modify_password_get_code_txt"
            android:layout_toRightOf="@+id/modify_password_txt"
            android:background="@color/txt_white" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/modify_password_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:padding="@dimen/value_5dp"
            android:background="@color/txt_white" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/modify_password_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:padding="@dimen/value_5dp"
            android:background="@color/txt_white" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次输入："
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/modify_password_repassword_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/value_5dp"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/modify_password_ensure_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_40dp"
            android:layout_marginLeft="@dimen/value_40dp"
            android:background="@mipmap/register_register_back"
            android:padding="@dimen/value_10dp"
            android:gravity="center"
            android:text="确认"
            android:textSize="@dimen/value_16sp"
            android:textColor="@color/txt_white" />
    </RelativeLayout>
</LinearLayout>
