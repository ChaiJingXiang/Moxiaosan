<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_48dp"
    android:background="@color/main_color"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/title_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp"
        android:paddingTop="@dimen/value_5dp"
        android:paddingBottom="@dimen/value_5dp"
        android:background="#00000000"
        android:src="@drawable/title_back_no" />

    <TextView
        android:id="@+id/title_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/txt_white"
        android:textSize="@dimen/value_17sp" />

    <TextView
        android:id="@+id/title_right_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/txt_orange"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/value_10dp"
        android:textSize="@dimen/value_15sp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/value_10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>