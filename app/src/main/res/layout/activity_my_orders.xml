<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_orders_no_pay_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未付款"
            android:textSize="@dimen/value_16sp"
            android:textColor="@color/txt_333333" />

        <TextView
            android:id="@+id/my_orders_have_pay_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/value_16sp"
            android:text="已付款"
            android:textColor="@color/txt_999999"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_2dp"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/my_orders_divider_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/txt_red" />
    </LinearLayout>
<android.support.v4.view.ViewPager
    android:id="@+id/my_orders_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
</LinearLayout>
