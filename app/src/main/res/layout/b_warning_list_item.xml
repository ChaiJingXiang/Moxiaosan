<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/value_10dp"
    android:gravity="center_vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/value_5dp"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            >

            <TextView
                android:id="@+id/nameId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点量不足，请充电"
                android:textColor="@color/txt_666666"
                android:textSize="@dimen/value_16sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/value_5dp"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            >

            <TextView
                android:id="@+id/timeId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/txt_666666"
                android:textSize="@dimen/value_14sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/value_5dp"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="警情地址："
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_16sp"
                />

            <TextView
                android:id="@+id/addressId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/txt_333333"
                android:textSize="@dimen/value_16sp"
                />

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/value_10dp"
        android:layout_height="@dimen/value_20dp"
        android:src="@mipmap/right_direction_grey"
        android:layout_marginRight="@dimen/value_10dp"
        android:layout_marginLeft="@dimen/value_10dp"
        />



</LinearLayout>