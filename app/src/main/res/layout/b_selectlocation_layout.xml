<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_48dp"
        android:background="@color/main_color">

        <ImageButton
            android:id="@+id/title_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/value_10dp"
            android:paddingRight="@dimen/value_10dp"
            android:paddingTop="@dimen/value_5dp"
            android:paddingBottom="@dimen/value_5dp"
            android:background="#00000000"
            android:src="@drawable/title_back_no" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="@dimen/value_260dp"
            android:layout_height="@dimen/value_40dp"
            android:layout_centerInParent="true"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/value_17sp"
            />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/txt_white"
            android:layout_centerVertical="true"
            android:padding="@dimen/value_10dp"
            android:textSize="@dimen/value_16sp"
            android:text="чбошод"
            />

    </RelativeLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.baidu.mapapi.map.MapView>


</LinearLayout>