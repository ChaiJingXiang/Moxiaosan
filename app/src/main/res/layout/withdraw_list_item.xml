<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/txt_white"
    android:paddingBottom="@dimen/value_5dp"
    android:paddingLeft="@dimen/value_10dp"
    android:paddingRight="@dimen/value_10dp"
    android:paddingTop="@dimen/value_5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/withdraw_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:textColor="@color/txt_666666"
            android:textSize="@dimen/value_16sp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/withdraw_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@color/txt_666666"
                android:textSize="@dimen/value_14sp" />

            <TextView
                android:id="@+id/withdraw_list_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@color/txt_666666"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/value_14sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/withdraw_list_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥00"
            android:layout_marginBottom="5dp"
            android:textColor="@color/txt_red" />

        <TextView
            android:id="@+id/withdraw_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textColor="@color/txt_red" />

    </LinearLayout>

</RelativeLayout>