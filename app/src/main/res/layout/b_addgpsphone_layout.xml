<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/value_20dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:src="@mipmap/simle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备IMEI和SIM卡"
                android:textColor="@color/txt_999999"
                android:textSize="@dimen/value_14sp"
                android:paddingTop="@dimen/value_10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是设备激活的必要条件请认真核对输入正确"
                android:textColor="@color/txt_999999"
                android:textSize="@dimen/value_14sp"
                android:paddingTop="@dimen/value_5dp"
                />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/value_40dp"
            android:background="@color/txt_white"
            android:gravity="center"
            android:padding="@dimen/value_10dp"
            >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                
                <ImageView
                    android:id="@+id/imgIMEI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/imea_pic"
                    android:layout_marginRight="@dimen/value_5dp"
                    android:layout_centerVertical="true"
                    />
                
                <EditText
                    android:id="@+id/etIMEI"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_toRightOf="@id/imgIMEI"
                    android:background="#fff"
                    android:hint="手动输入设备IMEI"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_14sp"
                    />

                <ImageView
                    android:id="@+id/imgCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/code_pic"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f1f1"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imgSIM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sim_pic"
                    android:layout_marginRight="@dimen/value_5dp"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/etSIM"
                    android:layout_width="@dimen/value_250dp"
                    android:layout_height="@dimen/value_40dp"
                    android:layout_toRightOf="@id/imgSIM"
                    android:background="#fff"
                    android:hint="输入设备SIM卡号"
                    android:textColor="@color/txt_333333"
                    android:textSize="@dimen/value_14sp"
                    />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/value_10dp"
        >

        <TextView
            android:id="@+id/sureId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_50dp"
            android:text="确定"
            android:textSize="@dimen/value_18sp"
            android:textColor="@color/txt_white"
            android:background="@mipmap/register_register_back"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>