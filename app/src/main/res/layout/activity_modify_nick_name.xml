<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/modify_nick_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/value_5dp"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/modify_nick_name_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/value_10dp"
        android:layout_marginRight="@dimen/value_40dp"
        android:layout_marginLeft="@dimen/value_40dp"
        android:background="@mipmap/register_register_back"
        android:padding="@dimen/value_15dp"
        android:gravity="center"
        android:text="确认"
        android:textSize="@dimen/value_16sp"
        android:textColor="@color/txt_white" />
</RelativeLayout>
