<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="劳力服务项目："
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/publish_labour_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:hint="名称"
            android:textSize="@dimen/value_14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数：                "
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/publish_labour_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:numeric="integer"
            android:hint="个"
            android:textSize="@dimen/value_14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间：        "
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/publish_labour_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:hint="时间"
            android:textSize="@dimen/value_14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_40dp"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/value_10dp"
        android:paddingRight="@dimen/value_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薪资：                "
            android:textColor="@color/txt_333333" />

        <EditText
            android:id="@+id/publish_labour_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:background="@color/txt_white"
            android:hint="面议"
            android:textSize="@dimen/value_14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/value_10dp"
        android:padding="@dimen/value_5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作地址：           "
            android:textColor="@color/txt_333333" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_30dp"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/spin_province"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    style="@style/spinner_style"
                    android:animationCache="true"
                    android:drawSelectorOnTop="true"
                     />

                <Spinner
                    android:id="@+id/spin_city"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    style="@style/spinner_style"
                    android:animationCache="true"
                    android:drawSelectorOnTop="true"
                    android:layout_marginLeft="@dimen/value_5dp"
                    android:layout_marginRight="@dimen/value_5dp"
                    />

                <Spinner
                    android:id="@+id/spin_county"
                    android:layout_width="80dp"
                    android:scrollbars="none"
                    style="@style/spinner_style"
                    android:layout_height="wrap_content"
                    android:animationCache="true"
                    android:drawSelectorOnTop="true"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/publish_labour_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_5dp"
                android:background="@mipmap/small_edit_back"
                android:hint="详细地址、街道、门牌号"
                android:padding="@dimen/value_5dp"
                android:textSize="@dimen/value_14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_1dp"
        android:layout_marginLeft="@dimen/value_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/divider_line_horizonal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/txt_white"
        android:padding="@dimen/value_10dp">

        <EditText
            android:id="@+id/publish_labour_technique"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_180dp"
            android:background="@mipmap/big_edit_back"
            android:gravity="top"
            android:hint="技能要求"
            android:padding="@dimen/value_10dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/publish_labour_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/value_10dp"
            android:background="@mipmap/publish_ensure_back"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/txt_white"
            android:textSize="@dimen/value_18sp" />
    </RelativeLayout>
</LinearLayout>
